name=less
from_source=less
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc ncurses"

build() {
    ${source_dir}/configure \
        --host=${OS_TRIPLET} \
        --prefix="${prefix}" \
        --sysconfdir=/etc

    make -j${parallelism}
}

package() {
    make install DESTDIR="${dest_dir}"
}
