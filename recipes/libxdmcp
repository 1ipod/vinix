name=libxdmcp
from_source=libxdmcp
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-proto xorg-util-macros libxau"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-vinix           \
        --prefix=${prefix}            \
        --sysconfdir=/etc             \
        --localstatedir=/var
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
