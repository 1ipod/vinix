name=base-files
from_source=base-files
revision=1

build() {
    true
}

package() {
    sudo cp -prv ${source_dir}/. "${dest_dir}"/
    sudo ln -s usr/bin "${dest_dir}"/bin
    sudo ln -s usr/bin "${dest_dir}"/sbin
    sudo ln -s usr/lib "${dest_dir}"/lib
    sudo ln -s usr/lib "${dest_dir}"/lib64
    sudo ln -s bin "${dest_dir}"/usr/sbin
    sudo ln -s lib "${dest_dir}"/usr/lib64
    sudo mkdir "${dest_dir}"/tmp
    sudo mkdir "${dest_dir}"/var
}
