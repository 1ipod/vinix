name=init
from_source=init
revision=1
hostdeps="gcc binutils v"
deps="mlibc"

configure() {
    true
}

build() {
    cd ${source_dir}
    VMODULES=/tmp/.vmodules VCROSS_COMPILER_NAME=x86_64-vinix-gcc v -gc none -os vinix .
}

install() {
    cd ${source_dir}
    command install -d "${dest_dir}/sbin"
    command install -s --strip-program=x86_64-vinix-strip init "${dest_dir}/sbin/"
}
