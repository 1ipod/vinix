name=nettle
from_source=nettle
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc gmp"
imagedeps="gcc"

build() {
    ${source_dir}/configure           \
        --host=${OS_TRIPLET}           \
        --prefix=${prefix}            \
        --disable-documentation       \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
}
