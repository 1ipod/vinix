name=nasm
from_source=nasm
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="core-libs"

build() {
    cp -rp "${source_dir}"/. ./

    ./configure \
        --host=${OS_TRIPLET} \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var

    make
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
