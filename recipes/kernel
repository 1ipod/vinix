#! /bin/sh

name=kernel
version=0.0
revision=1
source_dir="kernel"
source_imagedeps="git"
source_allow_network="yes"
hostdeps="gcc v"
deps="core-libs"

prepare() {
    ./get-deps
}

build() {
    cp -rpf "${source_dir}"/. ./

    make -j${parallelism} KCC=${OS_TRIPLET}-gcc KLD=${OS_TRIPLET}-ld KOBJDUMP=${OS_TRIPLET}-objdump
}

package() {
    make install PREFIX="${prefix}" DESTDIR="${dest_dir}"

    post_package_strip
}
