name=kernel
version=0.0
revision=1
source_dir="kernel"
source_imagedeps="git"
source_allow_network="yes"
hostdeps="gcc v"

regenerate() {
    ./get-deps
}

build() {
    cp -rpf "${source_dir}"/. ./

    make -j${parallelism} TOOLCHAIN_PREFIX=x86_64-vinix-
}

package() {
    make install PREFIX="${prefix}" DESTDIR="${dest_dir}"

    post_package_strip
}
