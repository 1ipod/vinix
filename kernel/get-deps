#! /bin/sh

if ! [ -d c/freestanding-headers ]; then
    git clone https://github.com/mintsuki/freestanding-headers.git c/freestanding-headers
fi

if ! [ -d c/flanterm ]; then
    git clone https://github.com/mintsuki/flanterm.git c/flanterm
fi

if ! [ -d c/printf ]; then
    mkdir -p c/printf
    curl -Lo c/printf/printf.c https://github.com/eyalroz/printf/raw/develop/src/printf/printf.c
    curl -Lo c/printf/printf.h https://github.com/eyalroz/printf/raw/develop/src/printf/printf.h
fi
